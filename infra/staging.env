
# Application Configuration
NODE_ENV=staging
PORT=3000
API_PREFIX=/api

# MongoDB Configuration
MONGODB_URI=mongodb+srv://staging-user:staging-password@staging-cluster.mongodb.net/file-management-staging
MONGODB_DATABASE=file-management-staging

# AWS S3 Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=staging-access-key-id
AWS_SECRET_ACCESS_KEY=staging-secret-access-key
AWS_S3_BUCKET=file-management-staging
AWS_S3_ENDPOINT=https://s3.us-east-1.amazonaws.com

# JWT Configuration
JWT_SECRET=staging-secret-key
JWT_EXPIRATION=1h

# Logging Configuration
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGIN=https://staging.example.com

# Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX=500

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=csv,xlsx,xls
UPLOAD_DIR=uploads/staging