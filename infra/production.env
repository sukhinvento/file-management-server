# Application Configuration
NODE_ENV=production
PORT=3000
API_PREFIX=/api

# MongoDB Configuration
MONGODB_URI=mongodb+srv://production-user:production-password@production-cluster.mongodb.net/file-management
MONGODB_DATABASE=file-management

# AWS S3 Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=production-access-key-id
AWS_SECRET_ACCESS_KEY=production-secret-access-key
AWS_S3_BUCKET=file-management
AWS_S3_ENDPOINT=https://s3.us-east-1.amazonaws.com

# JWT Configuration
JWT_SECRET=production-secret-key
JWT_EXPIRATION=1h

# Logging Configuration
LOG_LEVEL=warn

# CORS Configuration
CORS_ORIGIN=https://production.example.com

# Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX=1000

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=csv,xlsx,xls
UPLOAD_DIR=uploads/production
